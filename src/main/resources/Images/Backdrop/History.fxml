<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="cinemaboking.doanx.MainController" stylesheets="@Style.css">
    <children>
        <!-- Buttons to switch views -->
        <HBox alignment="CENTER" spacing="10" layoutX="20.0" layoutY="20.0">
            <Button text="Order History" fx:id="orderHistoryButton" onAction="#showOrderHistory"/>
            <Button text="Ticket History" fx:id="ticketHistoryButton" onAction="#showTicketHistory"/>
        </HBox>

        <!-- Container for the views -->
        <VBox layoutX="20.0" layoutY="60.0" prefWidth="1150.0" prefHeight="756.0" spacing="10" alignment="CENTER">
            <!-- Ticket History View -->
            <VBox fx:id="ticketHistoryView" visible="false">
                <Label fx:id="ticketHeaderLabel" text="Ticket History" alignment="CENTER"/>
                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <TextField fx:id="ticketSearchBox" promptText="Search Ticket..." prefWidth="135.0"/>
                </HBox>
                <HBox alignment="CENTER" spacing="10">
                    <TableView fx:id="ticketHistoryTable" prefHeight="450.0" prefWidth="778.0">
                        <columns>
                            <TableColumn fx:id="idTicketColumn" prefWidth="75.0" text="ID Ticket"/>
                            <TableColumn fx:id="clientNameTicketColumn" prefWidth="100.0" text="Client Name"/>
                            <TableColumn fx:id="dateTimeBookColumn" prefWidth="150.0" text="Date Time Book"/>
                            <TableColumn fx:id="idSeatColumn" prefWidth="75.0" text="ID Seat"/>
                            <TableColumn fx:id="idTheaterColumn" prefWidth="75.0" text="ID Theater"/>
                            <TableColumn fx:id="idSeatShowTimeColumn" prefWidth="125.0" text="ID Seat Showtime"/>
                            <TableColumn fx:id="movieNameColumn" prefWidth="100.0" text="Movie Name"/>
                            <TableColumn fx:id="totalTicketColumn" prefWidth="75.0" text="Total"/>
                        </columns>
                    </TableView>
                </HBox>
                <HBox spacing="10" alignment="CENTER">
                    <Button text="Delete" onAction="#handleTicketDelete"/>
                </HBox>
            </VBox>

            <!-- Order History View -->
            <VBox fx:id="orderHistoryView" visible="false">
                <Label fx:id="orderHeaderLabel" text="Order History" alignment="CENTER"/>
                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <TextField fx:id="orderSearchBox" promptText="Search Orders..." prefWidth="135.0"/>
                </HBox>
                <HBox alignment="CENTER" spacing="10">
                    <TableView fx:id="orderHistoryTable" prefHeight="450.0" prefWidth="593.0">
                        <columns>
                            <TableColumn fx:id="idOrderDetailColumn" prefWidth="100.0" text="Order Detail ID"/>
                            <TableColumn fx:id="clientNameOrderColumn" prefWidth="100.0" text="Client Name"/>
                            <TableColumn fx:id="dateTimeColumn" prefWidth="100.0" text="Date Time"/>
                            <TableColumn fx:id="idProductColumn" prefWidth="85.0" text="Product ID"/>
                            <TableColumn fx:id="quantityColumn" prefWidth="85.0" text="Quantity"/>
                            <TableColumn fx:id="priceColumn" prefWidth="60.0" text="Price"/>
                            <TableColumn fx:id="totalOrderColumn" prefWidth="60.0" text="Total"/>
                        </columns>
                    </TableView>
                </HBox>
                <HBox spacing="10" alignment="CENTER">
                    <Button text="Delete" onAction="#handleOrderDelete"/>
                </HBox>
            </VBox>
        </VBox>
    </children>
</AnchorPane>
